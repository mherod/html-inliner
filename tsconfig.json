{
  "include": [
    "src/**.ts",
    "src/**.tsx",
    "src/**.js",
    "src/**.jsx",
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2021",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2017",
      "es2021",
      "dom"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
  }
}
